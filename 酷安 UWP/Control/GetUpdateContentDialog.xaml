<ContentDialog
    x:Class="CoolapkUWP.Control.GetUpdateContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Title="更新"
    PrimaryButtonText="在GitHub上查看"
    SecondaryButtonText="忽略"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
    
    <ScrollViewer>
        <controls:MarkdownTextBlock ImageClicked="MarkdownTextBlock_ImageClicked" Text="{x:Bind Body}" ImageResolving="MarkdownTextBlock_ImageResolving" IsTextSelectionEnabled="False"/>
    </ScrollViewer>
</ContentDialog>
